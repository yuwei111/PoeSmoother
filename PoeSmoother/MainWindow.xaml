<Window x:Class="PoeSmoother.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="PoE Smoother" Height="600" Width="600"
        WindowStartupLocation="CenterScreen"
        WindowStyle="SingleBorderWindow"
        Background="{StaticResource DarkBackground}">
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Title -->
        <Grid Grid.Row="0" Margin="0,0,0,15">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Column="0"
                       Text="PoE Smoother" 
                       FontSize="20" 
                       FontWeight="Bold" 
                       VerticalAlignment="Center"
                       Foreground="{StaticResource DarkTextPrimary}"/>

            <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                <TextBlock Text="Game:" 
                           VerticalAlignment="Center" 
                           Margin="0,0,8,0"
                           FontSize="12"
                           Foreground="{StaticResource DarkTextSecondary}"/>
                <ComboBox x:Name="GameSelector"
                          Width="80"
                          FontSize="12"
                          Style="{StaticResource DarkComboBox}"
                          SelectedIndex="0"
                          SelectionChanged="GameSelector_SelectionChanged">
                    <ComboBoxItem Content="PoE 1"/>
                    <ComboBoxItem Content="PoE 2"/>
                </ComboBox>
            </StackPanel>
        </Grid>

        <!-- GGPK Path Selection -->
        <GroupBox Grid.Row="1" Header="GGPK File Path" Margin="0,0,0,8" FontSize="12" FontWeight="SemiBold">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBox x:Name="GgpkPathTextBox" 
                         Grid.Column="0"
                         Text="{Binding GgpkPath, UpdateSourceTrigger=PropertyChanged}"
                         IsReadOnly="True"
                         Margin="0,0,8,0"
                         FontSize="11"
                         VerticalContentAlignment="Center"/>

                <Button Grid.Column="1" 
                        Content="Browse..." 
                        Click="BrowseButton_Click"
                        MinWidth="80"
                        FontSize="11"/>
            </Grid>
        </GroupBox>

        <!-- Patches Section -->
        <GroupBox Grid.Row="2" Header="Available Patches" Margin="0,0,0,8" FontSize="12" FontWeight="SemiBold">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Select All / None and Zoom Control -->
                <Grid Grid.Row="0" Margin="0,0,0,8">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" Orientation="Horizontal">
                        <Button Content="Select All" 
                                Click="SelectAllButton_Click" 
                                MinWidth="80"
                                FontSize="11"
                                Style="{StaticResource SecondaryButton}"/>
                        <Button Content="Select None" 
                                Click="SelectNoneButton_Click" 
                                MinWidth="80"
                                FontSize="11"
                                Style="{StaticResource SecondaryButton}"/>
                        <Button Content="Mods Colors" 
                                Click="ModsColorsButton_Click" 
                                MinWidth="80"
                                FontSize="11"
                                Style="{StaticResource SecondaryButton}"
                                x:Name="ModsColorsButton"/>
                    </StackPanel>

                    <StackPanel Grid.Column="2" Orientation="Horizontal" HorizontalAlignment="Right">
                        <TextBlock Text="Camera Zoom:" 
                                   VerticalAlignment="Center" 
                                   Margin="0,0,8,0"
                                   FontSize="11"
                                   Foreground="{StaticResource DarkTextPrimary}"/>
                        <Slider x:Name="ZoomSlider"
                                Width="120"
                                Minimum="1.2"
                                Maximum="6.6"
                                Value="6.6"
                                TickFrequency="0.2"
                                IsSnapToTickEnabled="True"
                Style="{StaticResource RoundGreySlider}"
                                VerticalAlignment="Center"
                                ValueChanged="ZoomSlider_ValueChanged"/>
                        <TextBlock x:Name="ZoomValueText"
                                   Text="6.6"
                                   VerticalAlignment="Center"
                                   Margin="8,0,0,0"
                                   Width="20"
                                   FontSize="11"
                                   Foreground="{StaticResource DarkTextSecondary}"/>
                    </StackPanel>
                </Grid>

                <!-- Patches List -->
                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Style="{StaticResource DarkScrollViewer}">
                    <ItemsControl x:Name="PatchesItemsControl">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border BorderBrush="{StaticResource DarkBorder}" 
                                        BorderThickness="0" 
                                        Padding="4"
                                        Background="{StaticResource DarkSurface}"
                                        Margin="0,0,0,2"
                                        CornerRadius="2">
                                    <CheckBox IsChecked="{Binding IsSelected}"
                                              FontWeight="SemiBold"
                                              FontSize="12"
                                              Foreground="{StaticResource DarkTextPrimary}">
                                        <StackPanel>
                                            <TextBlock Text="{Binding Name}" 
                                                       FontWeight="SemiBold"
                                                       FontSize="12"
                                                       Foreground="{StaticResource DarkTextPrimary}"/>
                                            <TextBlock Text="{Binding Description}" 
                                                       Margin="0,1,0,0"
                                                       Foreground="{StaticResource DarkTextSecondary}"
                                                       TextWrapping="Wrap"
                                                       FontSize="10"/>
                                        </StackPanel>
                                    </CheckBox>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </Grid>
        </GroupBox>

        <!-- Progress Bar -->
        <ProgressBar Grid.Row="3" 
                     Height="20" 
                     Margin="8,0,4,8"
                     x:Name="ProgressBar"
                     Visibility="Collapsed" />

        <!-- Action Buttons -->
        <Grid Grid.Row="4">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBlock x:Name="StatusTextBlock" 
                       Grid.Column="0"
                       VerticalAlignment="Center"
                       FontSize="11"
                       Foreground="{StaticResource DarkTextSecondary}"
                       Margin="8,0"/>

            <Button Grid.Column="1" 
                    Content="Apply Patches" 
                    Click="ApplyButton_Click"
                    MinWidth="100"
                    FontSize="11"
                    x:Name="ApplyButton"/>
        </Grid>
    </Grid>
</Window>
